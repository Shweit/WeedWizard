{% extends 'base.html.twig' %}

{% block title %}Registrierung{% endblock %}

{% block body %}
    <div class="pt-5 row justify-content-center">
        <form class="col-6 pe-0 login_form" method="post">
            {% if app.user %}
                <div class="mb-3">
                    Du bist angemeldet als {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="card border-3 rounded-end-0 border-end-0 p-3" style="border-color: #888888">
                <div class="m-4 mb-0">
                    <div class="row" style="margin-top: -2rem; margin-bottom: 1.5rem">
                        <img src="{{ asset('build/images/logo.webp') }}" alt="Logo" style="height: 85px; width: auto;" class="rounded-circle col-5">
                        <h1 class="mb-3 col offset-md-1 align-self-center">Registrieren</h1>
                    </div>
                    <hr style="margin-top: -1rem">
                </div>
                <div class="ps-5 pe-5">
                    {{ form_start(registrationForm) }}

                    <div class="row mb-0">
                        <div class="col">
                            {{ form_widget(registrationForm.firstname, {
                                'attr': {
                                    'class': 'form-control rounded-5',
                                    'placeholder': 'Vorname',
                                    'required': true,
                                }
                            }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(registrationForm.lastname, {
                                'attr': {
                                    'class': 'form-control rounded-5',
                                    'placeholder': 'Nachname',
                                    'required': false,
                                }
                            }) }}
                        </div>
                    </div>

                    <div class="mb-0">
                        {{ form_widget(registrationForm.birthdate, {
                            'attr': {
                                'class': 'form-control rounded-5',
                                'placeholder': 'Geburtsdatum',
                                'required': true,
                            }
                        }) }}
                    </div>

                    <div class="mb-0">
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'form-control rounded-5',
                                'placeholder': 'Email',
                                'required': true,
                                'autocomplete': 'email'
                            }
                        }) }}
                    </div>

                    <div class="mb-0">
                        {{ form_widget(registrationForm.password.first, {
                            'attr': {
                                'class': 'form-control rounded-5',
                                'placeholder': 'Passwort',
                                'required': true,
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>

                    <div class="mb-0">
                        {{ form_widget(registrationForm.password.second, {
                            'attr': {
                                'class': 'form-control rounded-5',
                                'placeholder': 'Passwort wiederholen',
                                'required': true,
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>

                    <div class="form-check mb-0">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'form-check-input',
                                'required': true
                            }
                        }) }}
                        <label class="form-check-label" for="registrationForm_agreeTerms"></label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {{ form_end(registrationForm) }}
                </div>

                <div class="row justify-content-center mt-0 mb-0">
                    <button type="submit" class="btn btn-primary col-5">Registrieren</button>
                </div>
                <div class="row justify-content-center mb-2">
                    <a href="{{ path('app_login') }}" type="submit" class="btn col-5">Einloggen</a>
                </div>
            </div>
        </form>
        <div class="col-4 ps-0 pe-0 border-3 card rounded-start-0 border-start-0" style="border-color: #888888">
            <img src="{{ asset('build/images/weedwizrad_wizard.jpg') }}" class="rounded-end" alt="wizard_img" style="height: 30.625rem; width: auto">
        </div>
    </div>
{% endblock %}
