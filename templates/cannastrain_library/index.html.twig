{% extends 'base.html.twig' %}

{% block title %}Cannastrain Library | WeedWizard{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('cannastrain_library') }}
{% endblock %}

{% block body %}
    {% block container_class %}
        <div class="container-fluid">
    {% endblock %}

    {# Header #}
    {% include 'cannastrain_library/partials/_header.html.twig' with {'callToAction': '1. Wähle einen Züchter aus.'} %}

    {# Tabs list #}
    {% include 'cannastrain_library/partials/_tab_list.html.twig' %}

    {# Tabs content #}
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="d-flex flex-row border-top-4" id="database-container">

                {# Filters sidebar #}
                {% include 'cannastrain_library/partials/_filters_sidebar.html.twig' %}

                {# Breeders overview #}
                <div class="flex-grow-1" id="results">
                    <div class="container-fluid">
                        <div class="row">
                            {% for breeder in breeders %}
                                {% include 'cannastrain_library/partials/_breeder_card.html.twig' with {
                                    'image': breeder.logo,
                                    'name': breeder.name,
                                    'seedfinder_id': breeder.seedfinder_id,
                                    'description': 'Keine Beschreibung verfügbar',
                                    'strains_count': breeder.strains|length,
                                    'rating': 'Keine Wertung verfügbar',
                                    'source': 'SeedFinder',
                                } %}
                            {% endfor %}
                        </div>

                        {# Pagination #}
                        {% include 'cannastrain_library/partials/_pagination.html.twig' with {
                            'pagination_path' : 'weedwizard_cannastrain-library',
                        } %}
                    </div>
                </div>
            </div>
        </div>

        {# Additional tabs #}
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            Platzhalter Zubehör
        </div>

        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            Platzhalter Sonstiges
        </div>
    </div>
    </div>
{% endblock %}
