<div class="col-3 p-4">
    <div class="card rounded-3 mb-4" style="width: auto;">
        <div class="breeder-logo rounded-top-3">
            <img src="https://de.seedfinder.eu/pics/00breeder/{{ image }}" class="breeder-logo-img" alt="Logo of the breeder shown below">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ id }}. {{ name }}</h5>
            <p class="card-text">{{ description }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Anzahl Strains: {{ strains_count }}</li>
            <li class="list-group-item">Bewertung: {{ rating }}</li>
            <li class="list-group-item">Quelle: {{ source }}</li>
        </ul>
        <div class="card-body align-self-end">
            <a class="btn btn-primary card-link me-2" href="{{ path('weedwizard_cannastrain-library_breeder_view', {breederName: name}) }}">Mehr erfahren</a>
        </div>
    </div>
</div>