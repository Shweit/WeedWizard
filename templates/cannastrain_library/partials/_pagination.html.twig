<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-end">
        {% if currentPage > 1 %}
            <li class="page-item">
                <a class="page-link"
                   href="{{ path(pagination_path, {'page': currentPage - 1} | merge(breeder_id is not null ? {'breeder_id': breeder['seedfinder_id']} : {})) }}"
                   aria-label="Previous">
                    <span>&laquo;</span>
                </a>
            </li>
        {% endif %}

        {% for i in 1..totalPages %}
            <li class="page-item {% if i == currentPage %}active{% endif %}">
                {% if i == currentPage %}
                    <div class="page-link">
                        <span>{{ i }}</span>
                    </div>
                {% else %}
                    <a class="page-link"
                       href="{{ path(pagination_path, {'page': i} | merge(breeder_id is not null ? {'breeder_id': breeder['seedfinder_id']} : {})) }}">
                        <span>{{ i }}</span>
                    </a>
                {% endif %}
            </li>
        {% endfor %}

        {% if currentPage < totalPages %}
            <li class="page-item">
                <a class="page-link"
                   href="{{ path(pagination_path, {'page': currentPage + 1} | merge(breeder_id is not null ? {'breeder_id': breeder['seedfinder_id']} : {})) }}"
                   aria-label="Next">
                    <span>&raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>