    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Anwesenheit kontrollieren</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" id="checkAttendanceModal-errorAlert-{{ budBash.id }}" style="display: none"></div>

                <div id="qrCodeScanner" class="text-center">
                    <video id="video-{{ budBash.id }}" style="width: 100%" autoplay hidden></video>
