<div class="modal fade" id="attendanceModal-{{ budBash.id }}" tabindex="-1" aria-labelledby="attendanceModal-{{ budBash.name }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Anwesenheitsliste</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                {% for participants in budBash.participants %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ participants.firstname }} {{ participants.lastname }}
                        {{ iconForAttendance(budBash, participants)|raw }}
                    </li>
                {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schlie√üen</button>
            </div>
        </div>
    </div>
</div>